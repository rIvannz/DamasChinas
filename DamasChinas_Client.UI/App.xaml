<Application x:Class="DamasChinas_Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="AppShell.xaml">
        <Application.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>

                    <!-- Idioma por defecto -->
                <ResourceDictionary Source="pack://application:,,,/DamasChinas_Client;component/DamasChinas_Client.UI/Resources/Lang.en.xaml"/>

                <!-- Tema visual general -->
                <ResourceDictionary Source="pack://application:,,,/DamasChinas_Client;component/DamasChinas_Client.UI/Styles/Theme.xaml"/>

                <!-- Estilos personalizados de botones -->
                <ResourceDictionary Source="pack://application:,,,/DamasChinas_Client;component/DamasChinas_Client.UI/Styles/Buttons.xaml"/>

            </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Application.Resources>
</Application>


