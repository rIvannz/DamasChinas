<Page x:Class="DamasChinas_Client.Pages.ProfilePlayer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{DynamicResource SurfaceBrush}"
      d:DesignHeight="720" d:DesignWidth="1280">

    <Grid>
        <!-- ===== FONDO ===== -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/DamasChinas_Client;component/DamasChinas_Client.UI/Assets/Backgrounds/board-background.png"
                        Stretch="UniformToFill"/>
        </Grid.Background>
        <Rectangle Fill="#66000000"/>

        <!-- ===== ESTRUCTURA PRINCIPAL ===== -->
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Content -->
                <RowDefinition Height="Auto"/>
                <!-- Iconos inferiores -->
            </Grid.RowDefinitions>

            <!-- ===== ENCABEZADO ===== -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Botón Back -->
                <Button Width="60" Height="60"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        ToolTip="{DynamicResource back}"
                        Cursor="Hand"
                        Click="OnBackClick">
                    <Image Source="pack://application:,,,/DamasChinas_Client;component/DamasChinas_Client.UI/Assets/Icons/backIcon.png"
                           Width="40" Height="40"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>

                <!-- Título -->
                <TextBlock Grid.Column="1"
                           Text="{DynamicResource profile}"
                           FontFamily="pack://application:,,,/DamasChinas_Client;component/DamasChinas_Client.UI/Assets/Fonts/#Oups"
                           Foreground="White"
                           FontSize="42"
                           VerticalAlignment="Center"
                           Margin="15,0,0,0"/>
            </Grid>

            <!-- ===== CONTENIDO AUTOAJUSTABLE ===== -->
            <Border Grid.Row="1"
                    Background="#80222222"
                    BorderBrush="#444"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="25"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Margin="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <!-- PERFIL -->
                        <RowDefinition Height="1.3*"/>
                        <!-- ESTADÍSTICAS -->
                    </Grid.RowDefinitions>

                    <!-- ===== SECCIÓN PERFIL ===== -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="1.6*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Información del perfil -->
                        <Grid Grid.Column="0" Margin="10,10,20,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Título -->
                            <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                                       Text="{DynamicResource yourProfile}"
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,0,12"/>

                            <!-- Username -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,36,20,0">
                                <TextBlock Text="{DynamicResource username}" FontSize="24" Foreground="White"/>
                                <TextBlock Text="PixelYT12" FontSize="20" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>

                            <!-- Email -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="20,36,0,0">
                                <TextBlock Text="{DynamicResource email}" FontSize="24" Foreground="White"/>
                                <TextBlock Text="PixelYT12@gmail.com" FontSize="20" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>

                            <!-- Full Name -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,10,20,0">
                                <TextBlock Text="{DynamicResource fullname}" FontSize="25" Foreground="White"/>
                                <TextBlock Text="Iván Rodríguez" FontSize="20" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>

                            <!-- Social Media -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="20,10,0,0">
                                <TextBlock Text="{DynamicResource socialmedia}" FontSize="25" Foreground="White"/>
                                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                    <StackPanel Margin="0,0,20,0">
                                        <TextBlock Text="Facebook"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   TextAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="Instagram"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   TextAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <!-- Avatar + Botones -->
                        <StackPanel Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"
                                    Width="220">
                            <Image Source="pack://application:,,,/DamasChinas_Client;component/DamasChinas_Client.UI/Assets/Icons/avatarIcon.png"
                                   Width="120" Height="120"
                                   Margin="0,0,0,16"
                                   Stretch="Uniform"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>

                            <Button Style="{DynamicResource BaseGameButton}"
                                    Content="{DynamicResource changeData}"
                                    Width="180" Height="44"
                                    Margin="0,0,0,10"
                                    Click="OnChangeDataClick"/>


                            <Button Style="{DynamicResource BaseGameButton}"
                                    Content="{DynamicResource logout}"
                                    Width="180" Height="44"
                                    Background="#444" BorderBrush="#333"/>
                        </StackPanel>
                    </Grid>

                    <!-- ===== SECCIÓN ESTADÍSTICAS ===== -->
                    <Grid Grid.Row="1" Margin="0,20,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="{DynamicResource statistics}"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="6,0,0,8"/>

                        <Grid Grid.Row="1" Margin="10,0,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="{DynamicResource matchesPlayed}" FontSize="23" Foreground="White"/>
                                <TextBlock Text="100" FontSize="18" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="{DynamicResource wins}" FontSize="23" Foreground="White"/>
                                <TextBlock Text="80" FontSize="18" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="{DynamicResource loses}" FontSize="23" Foreground="White"/>
                                <TextBlock Text="20" FontSize="18" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>

            <!-- ===== ICONOS ABAJO DERECHA ===== -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,10,10,0">
                <Button Width="44" Height="44"
                        Background="Transparent"
                        BorderThickness="0"
                        ToolTip="{DynamicResource sound}"
                        Click="OnSoundClick">
                    <Image Source="pack://application:,,,/DamasChinas_Client;component/DamasChinas_Client.UI/Assets/Icons/soundIcon.png"
                           Width="26" Height="26"/>
                </Button>
                <Button Width="44" Height="44"
                        Background="Transparent"
                        BorderThickness="0"
                        ToolTip="{DynamicResource language}"
                        Click="OnLanguageClick">
                    <Image Source="pack://application:,,,/DamasChinas_Client;component/DamasChinas_Client.UI/Assets/Icons/languageIcon.png"
                           Width="26" Height="26"/>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
