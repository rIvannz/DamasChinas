<Page x:Class="DamasChinas_Client.MenuRegisteredPlayer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{DynamicResource SurfaceBrush}">

    <Grid>
        <!-- ===== Fondo del tablero ===== -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/DamasChinas_Client;component/DamasChinas_Client.UI/Assets/Backgrounds/board-background.png"
                        Stretch="UniformToFill"
                        AlignmentX="Center"
                        AlignmentY="Center"/>
        </Grid.Background>

        <!-- ===== Capa de oscurecimiento total ===== -->
        <Rectangle Fill="#66000000"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   Panel.ZIndex="0"/>

        <!-- ===== ESTRUCTURA PRINCIPAL ===== -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Encabezado -->
                <RowDefinition Height="*"/>
                <!-- Contenido central -->
                <RowDefinition Height="Auto"/>
                <!-- Parte inferior -->
            </Grid.RowDefinitions>

            <!-- ===== AVATAR Y USERNAME ===== -->
            <StackPanel Orientation="Vertical"
                        Grid.Row="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,20,40,0">
                <Button Width="70" Height="70"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="OnAvatarClick">
                    <Image Source="pack://application:,,,/DamasChinas_Client;component/DamasChinas_Client.UI/Assets/Icons/avatarIcon.png"
                           Width="54" Height="54"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>

                <TextBlock Text="{DynamicResource username}"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,6,0,0"/>
            </StackPanel>

            <!-- ===== CONTENIDO CENTRAL ===== -->
            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="520">

                <!-- ===== Título principal ===== -->
                <Grid HorizontalAlignment="Center" Margin="0,0,0,40">
                    <TextBlock Text="{DynamicResource gameTitle}"
                               FontFamily="pack://application:,,,/DamasChinas_Client;component/DamasChinas_Client.UI/Assets/Fonts/#Oups"
                               FontSize="56"
                               FontWeight="Bold"
                               Foreground="Black"
                               Margin="2,2,0,0"
                               Opacity="0.7"
                               TextAlignment="Center">
                        <TextBlock.Effect>
                            <BlurEffect Radius="1.5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="{DynamicResource gameTitle}"
                               FontFamily="pack://application:,,,/DamasChinas_Client;component/DamasChinas_Client.UI/Assets/Fonts/#Oups"
                               FontSize="56"
                               FontWeight="Bold"
                               Foreground="White"
                               TextAlignment="Center"/>
                </Grid>

                <!-- ===== Botones principales ===== -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,25">
                    <Button Style="{DynamicResource BaseGameButton}"
                            Content="{DynamicResource createGame}"
                            Width="220" Height="64"
                            Margin="0,0,20,0"
                            Click="OnCreateGameClick"/>
                    <Button Style="{DynamicResource BaseGameButton}"
                            Content="{DynamicResource joinParty}"
                            Width="220" Height="64"
                            Click="OnJoinPartyClick"/>
                </StackPanel>

                <!-- ===== How to Play ===== -->
                <Button Style="{DynamicResource BaseGameButton}"
                        Content="{DynamicResource howToPlay}"
                        Width="220" Height="64"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,40"
                        Click="OnHowToPlayClick"/>
            </StackPanel>

            <!-- ===== ICONOS INFERIORES (agrandados) ===== -->
            <Grid Grid.Row="2"
                  Margin="40,0,40,40"
                  VerticalAlignment="Bottom">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- Centro -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Derecha -->
                </Grid.ColumnDefinitions>

                <!-- ===== CENTRO: Íconos amigos y estadísticas ===== -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,0">
                    <Button Width="80" Height="80"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="OnStatisticsClick">
                        <Image Source="pack://application:,,,/DamasChinas_Client;component/DamasChinas_Client.UI/Assets/Icons/stadisticsIcon.png"
                               Width="48" Height="48"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               Opacity="0.9"/>
                    </Button>

                    <Button Width="60" Height="60"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            ToolTip="{DynamicResource friends}"
                            Cursor="Hand"
                            Click="OnFriendsClick">
                        <Image Source="pack://application:,,,/DamasChinas_Client;component/DamasChinas_Client.UI/Assets/Icons/friendsIcon.png"
                                Width="40" Height="40"
                                Stretch="Uniform"
                                RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Button>

                </StackPanel>

                <!-- ===== DERECHA: idioma y sonido ===== -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="0,0,10,0">
                    <Button Width="70" Height="70"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="OnSoundClick">
                        <Image Source="pack://application:,,,/DamasChinas_Client;component/DamasChinas_Client.UI/Assets/Icons/soundIcon.png"
                               Width="40" Height="40"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               Opacity="0.9"/>
                    </Button>

                    <Button Width="70" Height="70"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="OnLanguageClick">
                        <Image Source="pack://application:,,,/DamasChinas_Client;component/DamasChinas_Client.UI/Assets/Icons/languageIcon.png"
                               Width="40" Height="40"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               Opacity="0.9"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>

