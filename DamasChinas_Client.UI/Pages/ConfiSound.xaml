<Page x:Class="DamasChinas_Client.UI.Pages.ConfiSound"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{DynamicResource SurfaceBrush}"
      d:DesignHeight="720" d:DesignWidth="1280">

    <Grid>
        <!-- ===== Fondo con oscurecimiento ===== -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Backgrounds/board-background.png"
                        Stretch="UniformToFill"
                        AlignmentX="Center"
                        AlignmentY="Center"/>
        </Grid.Background>
        <Rectangle Fill="#66000000"/>

        <!-- ===== ESTRUCTURA PRINCIPAL ===== -->
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ===== BARRA SUPERIOR ===== -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Botón Back -->
                <Button Width="60" Height="60"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        ToolTip="{DynamicResource back}"
                        Cursor="Hand"
                        Click="OnBackClick">
                    <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/backIcon.png"
                           Width="40" Height="40"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>

                <!-- Título -->
                <TextBlock Grid.Column="1"
                           Text="{DynamicResource configuration}"
                           FontFamily="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Fonts/#Oups"
                           Foreground="White"
                           FontSize="42"
                           VerticalAlignment="Center"
                           Margin="15,0,0,0"/>
            </Grid>

            <!-- ===== CONTENIDO PRINCIPAL ===== -->
            <Border Grid.Row="1"
                    Background="#80222222"
                    BorderBrush="#444"
                    BorderThickness="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="800" Height="400"
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- ===== ÍCONO LATERAL ===== -->
                    <StackPanel Grid.RowSpan="2"
                                Orientation="Vertical"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0">
                        <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/soundIcon.png"
                               Width="40" Height="40"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               Margin="0,20,0,0"/>
                    </StackPanel>

                    <!-- ===== TÍTULO DE SECCIÓN ===== -->
                    <Border Grid.Column="1" Grid.Row="0"
                            Background="#353535"
                            BorderBrush="#555"
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="{DynamicResource sound}"
                                   FontWeight="Bold"
                                   FontSize="20"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Margin="15,6,0,6"/>
                    </Border>

                    <!-- ===== CONTENIDO ===== -->
                    <StackPanel Grid.Column="1" Grid.Row="1"
                                Margin="25,25,0,0"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left">

                        <TextBlock Text="{DynamicResource volume}"
                                   FontSize="18"
                                   Foreground="White"
                                   Margin="0,0,0,10"/>

                        <!-- ===== MÚSICA ===== -->
                        <TextBlock Text="{DynamicResource music}"
                                   FontSize="16"
                                   Foreground="White"
                                   Margin="0,10,0,6"/>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/soundIcon.png"
                                   Width="26" Height="26"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>

                            <Slider x:Name="MusicSlider"
                                    Minimum="0"
                                    Maximum="100"
                                    Value="50"
                                    Width="500"
                                    TickFrequency="10"
                                    IsSnapToTickEnabled="True"
                                    VerticalAlignment="Center">
                                <Slider.Resources>
                                    <Style TargetType="Thumb">
                                        <Setter Property="Background" Value="{DynamicResource AccentColor}"/>
                                    </Style>
                                    <Style TargetType="RepeatButton">
                                        <Setter Property="Background" Value="#444"/>
                                    </Style>
                                </Slider.Resources>
                            </Slider>
                        </StackPanel>

                        <!-- ===== EFECTOS ===== -->
                        <TextBlock Text="{DynamicResource effects}"
                                   FontSize="16"
                                   Foreground="White"
                                   Margin="0,25,0,6"/>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/soundIcon.png"
                                   Width="26" Height="26"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>

                            <Slider x:Name="EffectsSlider"
                                    Minimum="0"
                                    Maximum="100"
                                    Value="50"
                                    Width="500"
                                    TickFrequency="10"
                                    IsSnapToTickEnabled="True"
                                    VerticalAlignment="Center">
                                <Slider.Resources>
                                    <Style TargetType="Thumb">
                                        <Setter Property="Background" Value="{DynamicResource AccentColor}"/>
                                    </Style>
                                    <Style TargetType="RepeatButton">
                                        <Setter Property="Background" Value="#444"/>
                                    </Style>
                                </Slider.Resources>
                            </Slider>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
