<Page x:Class="DamasChinas_Client.UI.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{DynamicResource SurfaceBrush}">

    <Grid>
        <!-- ===== Fondo ===== -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Backgrounds/board-background.png"
                        Stretch="UniformToFill"
                        AlignmentX="Center"
                        AlignmentY="Center"/>
        </Grid.Background>

        <!-- Capa de oscurecimiento -->
        <Rectangle Fill="#66000000"/>

        <!-- ===== Botón Back con ícono transparente ===== -->
        <Button Width="60" Height="60"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20"
                Background="Transparent"
                BorderBrush="Transparent"
                BorderThickness="0"
                ToolTip="{DynamicResource back}"
                Cursor="Hand"
                Click="OnBackClick">
            <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/backIcon.png"
                   Width="32" Height="32"
                   Stretch="Uniform"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
        </Button>

        <!-- ===== Contenido principal ===== -->
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="40"
                    Width="460">

            <!-- ===== Título ===== -->
            <Grid HorizontalAlignment="Center" Margin="0,0,0,40">
                <TextBlock Text="{DynamicResource login}"
                           FontFamily="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Fonts/#Oups"
                           FontSize="58"
                           FontWeight="Bold"
                           Foreground="Black"
                           Margin="2,2,0,0"
                           Opacity="0.7"
                           TextAlignment="Center">
                    <TextBlock.Effect>
                        <BlurEffect Radius="1.5"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="{DynamicResource login}"
                           FontFamily="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Fonts/#Oups"
                           FontSize="58"
                           FontWeight="Bold"
                           Foreground="White"
                           TextAlignment="Center"/>
            </Grid>

            <!-- ===== Campos ===== -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <TextBlock Text="{DynamicResource username}" Foreground="White" FontSize="18" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername" Width="360" Height="38"/>

                <TextBlock Text="{DynamicResource password}" Foreground="White" FontSize="18" Margin="0,20,0,5"/>
                <PasswordBox x:Name="txtPassword" Width="360" Height="38"/>

                <!-- Enlace “¿Olvidaste tu contraseña?” -->
                <Border Background="#55000000" 
                        CornerRadius="8"
                        Padding="8,4"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,25">
                    <TextBlock Text="{DynamicResource forgotPassword}"
                               Foreground="White"
                               FontSize="15"
                               TextDecorations="Underline"
                               Cursor="Hand"
                               HorizontalAlignment="Right"
                               MouseDown="OnForgotPasswordClick"
                               Opacity="0.9">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>
            </StackPanel>

            <!-- ===== Botones ===== -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Style="{StaticResource BaseGameButton}"
                        Content="{DynamicResource login}"
                        Width="180" Height="54"
                        Click="OnLoginClick"/>
            </StackPanel>
        </StackPanel>

        <!-- ===== Iconos inferiores derechos ===== -->
        <Grid VerticalAlignment="Bottom"
              HorizontalAlignment="Right"
              Margin="20"
              Panel.ZIndex="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Icono de sonido -->
            <Button Grid.Column="0"
                    Width="60" Height="60"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    ToolTip="{DynamicResource sound}"
                    Cursor="Hand"
                    Click="OnSoundClick">
                <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/soundIcon.png"
                       Width="45" Height="50"
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </Button>

            <!-- Espaciador -->
            <Grid Grid.Column="1"/>

            <!-- Icono de idioma -->
            <Button Grid.Column="2"
                    Width="60" Height="60"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    ToolTip="{DynamicResource language}"
                    Cursor="Hand"
                    Click="OnLanguageClick">
                <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/languageIcon.png"
                       Width="32" Height="32"
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </Button>
        </Grid>
    </Grid>
</Page>
