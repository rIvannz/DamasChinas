<Page x:Class="DamasChinas_Client.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:DamasChinas_Client"
      mc:Ignorable="d"
      Background="{DynamicResource SurfaceBrush}">

    <Grid>
        <!-- ===== Fondo adaptativo ===== -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/DamasChinas_Client;component/DamasChinas_Client.UI/Assets/Backgrounds/board-background.png"
                        Stretch="UniformToFill"
                        AlignmentX="Center"
                        AlignmentY="Center"/>
        </Grid.Background>

        <!-- Oscurecimiento -->
        <Rectangle Fill="#66000000"/>

        <!-- ===== CONTENIDO PRINCIPAL ===== -->
        <Grid>
            <!-- Botón EXIT (arriba a la derecha) -->
            <Button Style="{StaticResource BaseGameButton}"
                    Content="{DynamicResource exit}"
                    Width="140" Height="44"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,20,20,0"
                    Click="OnExitClick"/>

            <!-- Contenido central -->
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="40">

                <!-- Título principal -->
                <Grid HorizontalAlignment="Center" Margin="0,0,0,40">
                    <TextBlock Text="{DynamicResource welcome}"
                               FontFamily="pack://application:,,,/DamasChinas_Client;component/DamasChinas_Client.UI/Assets/Fonts/#Oups"
                               FontSize="64"
                               FontWeight="Bold"
                               Foreground="Black"
                               Margin="2,2,0,0"
                               Opacity="0.7"
                               TextAlignment="Center">
                        <TextBlock.Effect>
                            <BlurEffect Radius="1.5"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock Text="{DynamicResource welcome}"
                               FontFamily="pack://application:,,,/DamasChinas_Client;component/DamasChinas_Client.UI/Assets/Fonts/#Oups"
                               FontSize="64"
                               FontWeight="Bold"
                               Foreground="White"
                               TextAlignment="Center"/>
                </Grid>

                <!-- Botones principales -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0,0,0,25">

                    <Button Style="{StaticResource BaseGameButton}"
                            Content="{DynamicResource login}"
                            Width="220" Height="64"
                            Margin="0,0,20,0"
                            Click="OnGoToLoginClick"/>

                    <Button Style="{StaticResource BaseGameButton}"
                            Content="{DynamicResource playasGuest}"
                            Width="220" Height="64"
                            Margin="20,0,0,0"
                            Click="OnPlayAsGuestClick"/>
                </StackPanel>

                <Button Style="{StaticResource BaseGameButton}"
                        Content="{DynamicResource signin}"
                        Width="220" Height="64"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0"
                        Click="OnGoToSignInClick"/>
            </StackPanel>

            <!-- ===== Iconos inferiores derechos ===== -->
            <Grid VerticalAlignment="Bottom"
                  HorizontalAlignment="Right"
                  Margin="20"
                  Panel.ZIndex="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Icono de sonido -->
                <Button Grid.Column="0"
                        Width="60" Height="60"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        ToolTip="{DynamicResource sound}"
                        Cursor="Hand"
                        Click="OnSoundClick">
                    <Image Source="pack://application:,,,/DamasChinas_Client;component/DamasChinas_Client.UI/Assets/Icons/soundIcon.png"
                           Width="54" Height="58"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>

                <!-- Espaciador -->
                <Grid Grid.Column="1"/>

                <!-- Icono de idioma -->
                <Button Grid.Column="2"
                        Width="60" Height="60"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        ToolTip="{DynamicResource language}"
                        Cursor="Hand"
                        Click="OnLanguageClick">
                    <Image Source="pack://application:,,,/DamasChinas_Client;component/DamasChinas_Client.UI/Assets/Icons/languageIcon.png"
                           Width="32" Height="32"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Page>

