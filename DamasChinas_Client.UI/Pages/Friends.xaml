<Page x:Class="DamasChinas_Client.UI.Pages.Friends"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{DynamicResource SurfaceBrush}"
      d:DesignHeight="720" d:DesignWidth="1280">

    <Grid>
        <!-- ===== FONDO DE MADERA ===== -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Backgrounds/board-background.png"
                        Stretch="UniformToFill"
                        AlignmentX="Center"
                        AlignmentY="Center"/>
        </Grid.Background>

        <Rectangle Fill="#66000000"/>

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ===== ENCABEZADO ===== -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Botón Back -->
                <Button Width="60" Height="60"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        ToolTip="{DynamicResource back}"
                        Cursor="Hand"
                        Click="OnBackClick">
                    <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/backIcon.png"
                           Width="40" Height="40"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>

                <!-- Título -->
                <TextBlock Grid.Column="1"
                           Text="{DynamicResource friends}"
                           FontFamily="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Fonts/#Oups"
                           Foreground="White"
                           FontSize="58"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- ===== CONTENIDO ===== -->
            <Border Grid.Row="1"
                    Background="#80222222"
                    BorderBrush="#444"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="20">

                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="10">
                        <Border Background="#44222222"
                                BorderBrush="#666"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="10"
                                Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Ellipse Width="16" Height="16"
                                         Fill="LimeGreen"
                                         VerticalAlignment="Center"
                                         Margin="5,0,10,0"/>

                                <Image Grid.Column="1"
                                       Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/avatarIcon.png"
                                       Width="45" Height="45"
                                       Stretch="Uniform"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>

                                <TextBlock Grid.Column="2"
                                           Text="panchito12"
                                           Foreground="White"
                                           FontSize="18"
                                           VerticalAlignment="Center"
                                           Margin="15,0,0,0"/>

                                <Button Grid.Column="3"
                                        Style="{StaticResource BaseGameButton}"
                                        Content="{DynamicResource viewProfile}"
                                        Width="130" Height="40"
                                        Margin="10,0,10,0"
                                        Click="OnViewProfileClick"/>

                                <Button Grid.Column="4"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        ToolTip="{DynamicResource chat}"
                                        Cursor="Hand"
                                        Click="OnChatClick">
                                    <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/chatIcon.png"
                                           Width="30" Height="30"
                                           Stretch="Uniform"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                </Button>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- ===== ICONOS INFERIORES ===== -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,10,10,0">
                <Button Width="44" Height="44"
                        Background="Transparent"
                        BorderThickness="0"
                        ToolTip="{DynamicResource sound}"
                        Click="OnSoundClick">
                    <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/soundIcon.png"
                           Width="26" Height="26"/>
                </Button>
                <Button Width="44" Height="44"
                        Background="Transparent"
                        BorderThickness="0"
                        ToolTip="{DynamicResource language}"
                        Click="OnLanguageClick">
                    <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/languageIcon.png"
                           Width="26" Height="26"/>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
