<Page x:Class="DamasChinas_Client.UI.Pages.MenuGuest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{DynamicResource SurfaceBrush}">

    <Grid>
        <!-- ===== Fondo del tablero ===== -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Backgrounds/board-background.png"
                        Stretch="UniformToFill"
                        AlignmentX="Center"
                        AlignmentY="Center"/>
        </Grid.Background>

        <!-- ===== Capa de oscurecimiento ===== -->
        <Rectangle Fill="#66000000"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   Panel.ZIndex="0"/>

        <!-- ===== ESTRUCTURA PRINCIPAL ===== -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Encabezado -->
                <RowDefinition Height="*"/>
                <!-- Contenido central -->
                <RowDefinition Height="Auto"/>
                <!-- Parte inferior -->
            </Grid.RowDefinitions>

            <!-- ===== BACK ICON (arriba a la izquierda) ===== -->
            <Button Width="70" Height="70"
                Background="Transparent"
                BorderBrush="Transparent"
                BorderThickness="0"
                Cursor="Hand"
                Margin="20,20,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="OnBackClick"
                ToolTip="{DynamicResource back}">
                <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/backIcon.png"
                Width="44" Height="44"
                Stretch="Uniform"
                RenderOptions.BitmapScalingMode="HighQuality"/>
            </Button>


            <!-- ===== AVATAR Y USERNAME (Invitado) ===== -->
            <StackPanel Orientation="Vertical"
                        Grid.Row="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,20,40,0">
                <Button Width="70" Height="70"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Cursor="Arrow">
                    <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/avatarIcon.png"
                           Width="54" Height="54"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>

                <TextBlock Text="{DynamicResource guestUser}"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,6,0,0"/>
            </StackPanel>

            <!-- ===== CONTENIDO CENTRAL ===== -->
            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="520">

                <!-- ===== Título principal ===== -->
                <Grid HorizontalAlignment="Center" Margin="0,0,0,40">
                    <TextBlock Text="{DynamicResource gameTitle}"
                               FontFamily="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Fonts/#Oups"
                               FontSize="56"
                               FontWeight="Bold"
                               Foreground="Black"
                               Margin="2,2,0,0"
                               Opacity="0.7"
                               TextAlignment="Center">
                        <TextBlock.Effect>
                            <BlurEffect Radius="1.5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="{DynamicResource gameTitle}"
                               FontFamily="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Fonts/#Oups"
                               FontSize="56"
                               FontWeight="Bold"
                               Foreground="White"
                               TextAlignment="Center"/>
                </Grid>
                
                

                <!-- ===== Botones principales (solo Join y How to Play) ===== -->
                <Button Style="{DynamicResource BaseGameButton}"
                        Content="{DynamicResource joinParty}"
                        Width="220" Height="64"
                        Margin="0,0,0,25"
                        Click="OnJoinPartyClick"/>

                <Button Style="{DynamicResource BaseGameButton}"
                        Content="{DynamicResource howToPlay}"
                        Width="220" Height="64"
                        HorizontalAlignment="Center"
                        Click="OnHowToPlayClick"/>
            </StackPanel>

            <!-- ===== ICONOS INFERIORES (solo estadísticas, idioma y sonido) ===== -->
            <Grid Grid.Row="2"
                  Margin="40,0,40,40"
                  VerticalAlignment="Bottom">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- ===== CENTRO: Estadísticas ===== -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom">
                    <Button Width="80" Height="80"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="OnStatisticsClick">
                        <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/stadisticsIcon.png"
                               Width="48" Height="48"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               Opacity="0.9"/>
                    </Button>
                </StackPanel>

                <!-- ===== DERECHA: idioma y sonido ===== -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="0,0,10,0">
                    <Button Width="70" Height="70"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="OnSoundClick">
                        <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/soundIcon.png"
                               Width="40" Height="40"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               Opacity="0.9"/>
                    </Button>

                    <Button Width="70" Height="70"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="OnLanguageClick">
                        <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/languageIcon.png"
                               Width="40" Height="40"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               Opacity="0.9"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
