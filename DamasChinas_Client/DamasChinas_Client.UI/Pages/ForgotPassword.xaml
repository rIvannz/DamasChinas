<Page x:Class="DamasChinas_Client.UI.Pages.ForgotPassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{DynamicResource SurfaceBrush}"
      d:DesignHeight="720" d:DesignWidth="1280">

    <Grid>
        <!-- FONDO -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Backgrounds/board-background.png"
                        Stretch="UniformToFill"/>
        </Grid.Background>
        <Rectangle Fill="#66000000"/>

        <!-- CONTENEDOR PRINCIPAL -->
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Width="60" Height="60"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Cursor="Hand"
                        Click="OnBackClick">
                    <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/backIcon.png"
                           Width="40" Height="40"/>
                </Button>

                <TextBlock Grid.Column="1"
                           Text="{DynamicResource forgotPassword}"
                           FontFamily="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Fonts/#Oups"
                           Foreground="White"
                           FontSize="42"
                           VerticalAlignment="Center"
                           Margin="15,0,0,0"/>
            </Grid>

            <!-- PANEL CENTRAL -->
            <Border Grid.Row="1"
                    Width="700"
                    Padding="40"
                    CornerRadius="10"
                    Background="#80222222"
                    BorderThickness="1"
                    BorderBrush="#555"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Email label -->
                        <RowDefinition Height="Auto"/>
                        <!-- Email + send -->
                        <RowDefinition Height="40"/>
                        <!-- Separador -->
                        <RowDefinition Height="Auto"/>
                        <!-- New pass label -->
                        <RowDefinition Height="Auto"/>
                        <!-- New pass -->
                        <RowDefinition Height="Auto"/>
                        <!-- Confirm label -->
                        <RowDefinition Height="Auto"/>
                        <!-- Confirm pass -->
                        <RowDefinition Height="40"/>
                        <!-- Separador -->
                        <RowDefinition Height="Auto"/>
                        <!-- Change button -->
                    </Grid.RowDefinitions>

                    <!-- EMAIL -->
                    <TextBlock Grid.Row="0"
                               Text="{DynamicResource email}"
                               FontSize="22" Foreground="White"/>

                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                Margin="0,5,0,0">
                        <TextBox x:Name="txtEmail"
                                 Width="400"
                                 Height="34"
                                 VerticalContentAlignment="Center"/>

                        <Button x:Name="btnSendCode"
                                Width="150"
                                Height="34"
                                Margin="10,0,0,0"
                                Style="{DynamicResource BaseGameButton}"
                                Content="{DynamicResource sendCode}"
                                Click="OnSendCodeClick"/>
                    </StackPanel>

                    <!-- NUEVA CONTRASEÑA -->
                    <TextBlock Grid.Row="3"
                               Text="{DynamicResource newPassword}"
                               FontSize="22" Foreground="White"/>

                    <PasswordBox x:Name="txtNewPassword"
                                 Grid.Row="4"
                                 Width="300"
                                 Height="34"/>

                    <!-- CONFIRMAR -->
                    <TextBlock Grid.Row="5"
                               Text="{DynamicResource confirmPassword}"
                               FontSize="22" Foreground="White"/>

                    <PasswordBox x:Name="txtConfirmPassword"
                                 Grid.Row="6"
                                 Width="300"
                                 Height="34"/>

                    <!-- BOTÓN -->
                    <Button x:Name="btnChangePassword"
                            Grid.Row="8"
                            Width="240"
                            Height="40"
                            HorizontalAlignment="Center"
                            Style="{DynamicResource BaseGameButton}"
                            Content="{DynamicResource changePassword}"
                            Click="OnChangePasswordClick"/>
                </Grid>
            </Border>

            <!-- ICONOS INFERIORES -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom">
                <Button Width="44" Height="44"
                        Background="Transparent"
                        BorderThickness="0"
                        ToolTip="{DynamicResource sound}"
                        Click="OnSoundClick">
                    <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/soundIcon.png"
                           Width="26" Height="26"/>
                </Button>

                <Button Width="44" Height="44"
                        Background="Transparent"
                        BorderThickness="0"
                        ToolTip="{DynamicResource language}"
                        Click="OnLanguageClick">
                    <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/languageIcon.png"
                           Width="26" Height="26"/>
                </Button>
            </StackPanel>

        </Grid>
    </Grid>
</Page>

