<Page x:Class="DamasChinas_Client.UI.Pages.ChangeData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{DynamicResource SurfaceBrush}">

    <Grid>
        <!-- ===== FONDO PRINCIPAL ===== -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Backgrounds/board-background.png"
                        Stretch="UniformToFill"
                        AlignmentX="Center"
                        AlignmentY="Center"/>
        </Grid.Background>

        <!-- Capa translúcida -->
        <Rectangle Fill="#66000000"/>

        <!-- ===== BOTÓN BACK ===== -->
        <Button Width="60" Height="60"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20"
                Background="Transparent"
                BorderBrush="Transparent"
                ToolTip="{DynamicResource back}"
                Cursor="Hand"
                Click="OnBackClick">
            <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/backIcon.png"
                   Width="32" Height="32"
                   Stretch="Uniform"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
        </Button>

        <!-- ===== CONTENIDO PRINCIPAL ===== -->
        <StackPanel VerticalAlignment="Top"
                    Margin="0,100,0,0"
                    HorizontalAlignment="Center"
                    Width="1000">

            <!-- ===== TÍTULO ===== -->
            <Grid HorizontalAlignment="Center" Margin="0,0,0,30">
                <TextBlock Text="{DynamicResource changeData}"
                           FontFamily="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Fonts/#Oups"
                           FontSize="58"
                           FontWeight="Bold"
                           Foreground="Black"
                           Opacity="0.7"
                           Margin="2,2,0,0"
                           TextAlignment="Center">
                    <TextBlock.Effect>
                        <BlurEffect Radius="1.5"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="{DynamicResource changeData}"
                           FontFamily="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Fonts/#Oups"
                           FontSize="58"
                           FontWeight="Bold"
                           Foreground="White"
                           TextAlignment="Center"/>
            </Grid>

            <!-- ===== INSTRUCCIÓN ===== -->
            <TextBlock Text="{DynamicResource changeDataInstruction}"
                       FontSize="16"
                       Foreground="White"
                       TextAlignment="Center"
                       Margin="0,0,0,30"
                       TextWrapping="Wrap"/>

            <!-- ===== SECCIONES PRINCIPALES (IZQ: username / DER: contraseña) ===== -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- ===== IZQUIERDA: DATOS Y CAMBIO DE USERNAME ===== -->
                <StackPanel Grid.Column="0">
                    <!-- Datos actuales -->
                    <Border Background="#22000000" Padding="15" CornerRadius="10" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource currentData}"
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,0,10"/>

                            <!-- Nombre y Apellido -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="{DynamicResource firstName}" Foreground="White" FontSize="15"/>
                                    <TextBox Text="Iván" 
                                             IsReadOnly="True"
                                             Background="#444"
                                             Foreground="#AAAAAA"
                                             BorderBrush="#777"
                                             BorderThickness="1"
                                             Height="36"
                                             Opacity="0.7"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="{DynamicResource lastName}" Foreground="White" FontSize="15"/>
                                    <TextBox Text="Rodríguez"
                                             IsReadOnly="True"
                                             Background="#444"
                                             Foreground="#AAAAAA"
                                             BorderBrush="#777"
                                             BorderThickness="1"
                                             Height="36"
                                             Opacity="0.7"/>
                                </StackPanel>
                            </Grid>

                            <!-- Correo y Username en la misma línea -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!-- Correo -->
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="{DynamicResource email}" Foreground="White" FontSize="15"/>
                                    <TextBox Text="PixelYT12@gmail.com"
                                             IsReadOnly="True"
                                             Background="#444"
                                             Foreground="#AAAAAA"
                                             BorderBrush="#777"
                                             BorderThickness="1"
                                             Height="36"
                                             Opacity="0.7"/>
                                </StackPanel>

                                <!-- Username -->
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="{DynamicResource username}" Foreground="White" FontSize="15"/>
                                    <TextBox Text="PixelYT12"
                                             IsReadOnly="True"
                                             Background="#444"
                                             Foreground="#AAAAAA"
                                             BorderBrush="#777"
                                             BorderThickness="1"
                                             Height="36"
                                             Opacity="0.7"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Cambio de username -->
                    <Border Background="#22000000" Padding="15" CornerRadius="10">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource changeUsername}"
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="{DynamicResource newUsername}" Foreground="White" FontSize="15"/>
                            <TextBox x:Name="txtUsername"
                                     Width="420" Height="38"
                                     Background="White"
                                     Foreground="Black"
                                     BorderBrush="#CCCCCC"
                                     BorderThickness="1"/>
                            <Button Style="{StaticResource BaseGameButton}"
                                    Content="{DynamicResource saveUsername}"
                                    Width="200" Height="45"
                                    Margin="0,15,0,0"
                                    HorizontalAlignment="Center"
                                    Click="OnSaveUsernameClick"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- ===== DERECHA: CAMBIO DE CONTRASEÑA ===== -->
                <Border Grid.Column="2"
                        Background="#22000000"
                        Padding="15"
                        CornerRadius="10">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource changePassword}"
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="{DynamicResource passwordInstruction}"
                                   FontSize="14"
                                   Foreground="#CCCCCC"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,15"/>

                        <!-- Código -->
                        <TextBlock Text="{DynamicResource codePassword}" Foreground="White" FontSize="15"/>
                        <TextBox x:Name="txtCode"
                                 Width="420" Height="38"
                                 Background="White"
                                 Foreground="Black"
                                 BorderBrush="#CCCCCC"
                                 BorderThickness="1"
                                 Margin="0,0,0,10"/>

                        <!-- Contraseñas -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="{DynamicResource password}" Foreground="White" FontSize="15"/>
                                <PasswordBox x:Name="txtPassword"
                                             Width="200" Height="38"
                                             Background="White"
                                             Foreground="Black"
                                             BorderBrush="#CCCCCC"
                                             BorderThickness="1"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="{DynamicResource confirmPassword}" Foreground="White" FontSize="15"/>
                                <PasswordBox x:Name="txtConfirmPassword"
                                             Width="200" Height="38"
                                             Background="White"
                                             Foreground="Black"
                                             BorderBrush="#CCCCCC"
                                             BorderThickness="1"/>
                            </StackPanel>
                        </Grid>

                        <!-- Botones juntos -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,25,0,0">
                            <Button Style="{StaticResource BaseGameButton}"
                                    Content="{DynamicResource sendCode}"
                                    Width="160" Height="45"
                                    Margin="0,0,10,0"
                                    Click="OnSendCodeClick"/>
                            <Button Style="{StaticResource BaseGameButton}"
                                    Content="{DynamicResource savePassword}"
                                    Width="160" Height="45"
                                    Click="OnSavePasswordClick"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>

        <!-- ===== ICONOS INFERIORES ===== -->
        <Grid VerticalAlignment="Bottom"
              HorizontalAlignment="Right"
              Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- SONIDO -->
            <Button Grid.Column="0"
                    Width="60" Height="60"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    ToolTip="{DynamicResource sound}"
                    Cursor="Hand"
                    Click="OnSoundClick">
                <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/soundIcon.png"
                       Width="45" Height="50"
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </Button>

            <!-- ESPACIADOR -->
            <Grid Grid.Column="1"/>

            <!-- IDIOMA -->
            <Button Grid.Column="2"
                    Width="60" Height="60"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    ToolTip="{DynamicResource language}"
                    Cursor="Hand"
                    Click="OnLanguageClick">
                <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/languageIcon.png"
                       Width="32" Height="32"
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </Button>
        </Grid>
    </Grid>
</Page>
