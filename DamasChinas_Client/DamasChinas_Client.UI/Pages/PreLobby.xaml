<Page x:Class="DamasChinas_Client.UI.Pages.PreLobby"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{DynamicResource SurfaceBrush}"
      d:DesignHeight="720" d:DesignWidth="1280">

    <Grid>
        <!-- ===== FONDO ===== -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Backgrounds/board-background.png"
                        Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Capa oscura -->
        <Rectangle Fill="#66000000"/>

        <!-- ===== CONTENIDO PRINCIPAL ===== -->
        <Grid Margin="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- ===== ENCABEZADO ===== -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,10,0,20">
                <Button Click="OnBackClick"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/backIcon.png"
                           Width="28"
                           Height="28"/>
                </Button>
                <TextBlock Text="{DynamicResource preLobby}"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"/>
            </StackPanel>

            <!-- ===== SECCIÓN IZQUIERDA (FRIENDS & MEMBERS) ===== -->
            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,20,0">
                <!-- Friends -->
                <Border CornerRadius="12" Background="#22000000" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource friendsList}"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"/>
                        <ListBox x:Name="friendsList"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="White"
                                 FontSize="14"
                                 Height="150"
                                 SelectionMode="Single"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel LastChildFill="False" Margin="0,2">
                                        <TextBlock Text="{Binding Username}" 
                                                   VerticalAlignment="Center" 
                                                   Foreground="White" 
                                                   DockPanel.Dock="Left"/>
                                        <Button Content="{DynamicResource invite}"
                                                Style="{DynamicResource BaseGameButton}"
                                                Width="70"
                                                Height="24"
                                                DockPanel.Dock="Right"
                                                Margin="10,0,0,0"/>
                                    </DockPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>

                <!-- Members -->
                <Border CornerRadius="12" Background="#22000000" Padding="10">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource membersList}"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"/>
                        <ListBox x:Name="membersList"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="White"
                                 FontSize="14"
                                 Height="200"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel LastChildFill="False" Margin="0,2">
                                        <TextBlock Text="{Binding Username}" 
                                                   VerticalAlignment="Center" 
                                                   Foreground="White" 
                                                   DockPanel.Dock="Left"/>
                                        <Button Content="BAN"
                                                Style="{DynamicResource BaseGameButton}"
                                                Width="70"
                                                Height="24"
                                                DockPanel.Dock="Right"
                                                Margin="10,0,0,0"
                                                Tag="{Binding}"
                                                Click="OnBanMemberClick"
                                                Visibility="{Binding IsHost, Converter={StaticResource HostVisibilityConverter}}"/>
                                    </DockPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- ===== SECCIÓN DERECHA (CHAT) ===== -->
            <Border Grid.Row="1" Grid.Column="2" CornerRadius="12" Background="#22000000" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Chat messages -->
                    <ScrollViewer Grid.Row="0"
                                  VerticalScrollBarVisibility="Auto"
                                  Margin="0,0,0,10">
                        <StackPanel x:Name="chatContainer"/>
                    </ScrollViewer>

                    <!-- Chat input -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <Grid Width="220" Height="32" Margin="0,0,10,0">
                            <TextBox x:Name="txtChatMessage"
                                     VerticalContentAlignment="Center"
                                     Foreground="Black"
                                     Background="White"
                                     BorderThickness="1"
                                     BorderBrush="#444"
                                     Padding="5,2"
                                     TextChanged="OnChatTextChanged"/>
                            <TextBlock x:Name="txtChatPlaceholder"
                                       Text="{DynamicResource chatPlaceholder}"
                                       Foreground="#888"
                                       Margin="8,2,0,0"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center"
                                       Visibility="Visible"
                                       FontStyle="Italic"/>
                        </Grid>
                        <Button Content="{DynamicResource send}"
                                Style="{DynamicResource BaseGameButton}"
                                Width="90"
                                Height="32"
                                Click="OnSendMessageClick"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ===== PIE DE PÁGINA ===== -->
            <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal"
                        HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,0">
                <StackPanel Orientation="Vertical" Margin="0,0,60,0" VerticalAlignment="Center">
                    <TextBlock x:Name="lblLobbyCode"
                               Text="CODE-XXXXXX"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"
                               TextAlignment="Center"/>
                    <TextBlock x:Name="txtLobbyPlayers"
                               Text="0/6"
                               Foreground="White"
                               FontSize="14"
                               TextAlignment="Center"/>
                </StackPanel>

                <Button Content="{DynamicResource exit}"
                        Style="{DynamicResource BaseGameButton}"
                        Width="150" Height="48"
                        Margin="0,0,15,0"
                        Click="OnExitClick"/>

                <Button Content="{DynamicResource startGame}"
                    Style="{DynamicResource BaseGameButton}"
                    Width="150" Height="48"
                    Visibility="{Binding IsHost, Converter={StaticResource HostVisibilityConverter}}"
                    Click="OnStartGameClick"/>

            </StackPanel>
        </Grid>
    </Grid>
</Page>

