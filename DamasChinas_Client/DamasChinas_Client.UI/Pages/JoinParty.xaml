<Page x:Class="DamasChinas_Client.UI.Pages.JoinParty"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{DynamicResource SurfaceBrush}"
      d:DesignHeight="720" d:DesignWidth="1280">

    <Grid>
        <!-- ===== FONDO ===== -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Backgrounds/board-background.png"
                        Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Capa oscura -->
        <Rectangle Fill="#66000000"/>

        <!-- ===== CONTENIDO PRINCIPAL ===== -->
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ===== ENCABEZADO ===== -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,10,0,20">
                <Button Click="OnBackClick"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/backIcon.png"
                           Width="28" Height="28"/>
                </Button>
                <TextBlock Text="{DynamicResource joinParty}"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"/>
            </StackPanel>

            <!-- ===== LISTADO DE PARTIDAS ===== -->
            <Border Grid.Row="1" CornerRadius="12" Background="#22000000" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Título -->
                    <TextBlock Text="{DynamicResource availableGames}"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,10"/>

                    <!-- Lista de partidas -->
                    <!-- Lista de partidas -->
                    <ListView x:Name="lstPublicLobbies"
          Grid.Row="1"
          Background="Transparent"
          BorderThickness="0"
          Foreground="White"
          FontSize="14"
          ScrollViewer.VerticalScrollBarVisibility="Auto"
          SelectionMode="Single">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="{DynamicResource lobbyCode}" Width="120" DisplayMemberBinding="{Binding Code}" />
                                <GridViewColumn Header="{DynamicResource host}" Width="200" DisplayMemberBinding="{Binding HostUsername}" />
                                <GridViewColumn Header="{DynamicResource players}" Width="100" DisplayMemberBinding="{Binding PlayerCount}" />
                                <GridViewColumn Header="{DynamicResource private}" Width="100" DisplayMemberBinding="{Binding IsPrivate}" />
                            </GridView>
                        </ListView.View>

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Margin" Value="0,3"/>
                                <Setter Property="Padding" Value="5,2"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border 
                        Background="#33000000"
                        BorderBrush="#55000000"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="5"
                        SnapsToDevicePixels="True">
                                                <ContentPresenter 
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>

                    </ListView>


                    <!-- Botones de acción -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button Content="{DynamicResource refresh}"
                                Style="{DynamicResource BaseGameButton}"
                                Width="150" Height="48"
                                Margin="0,0,15,0"
                                Click="OnRefreshClick"/>
                        <Button Content="{DynamicResource joinSelected}"
                                Style="{DynamicResource BaseGameButton}"
                                Width="150" Height="48"
                                Click="OnJoinSelectedClick"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ===== UNIRSE POR CÓDIGO ===== -->
            <Grid Grid.Row="2" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Contenedor para textbox y placeholder -->
                <Grid Width="260" Height="36">
                    <TextBox x:Name="txtLobbyCode"
                 VerticalContentAlignment="Center"
                 FontSize="14"
                 Padding="8,2"
                 Foreground="Black"
                 Background="White"
                 BorderThickness="1"
                 BorderBrush="#444"
                 Text=""
                 GotFocus="OnCodeBoxGotFocus"
                 LostFocus="OnCodeBoxLostFocus"/>
                    <TextBlock x:Name="txtCodePlaceholder"
                   Text="{DynamicResource enterCodePlaceholder}"
                   Foreground="#888"
                   FontStyle="Italic"
                   IsHitTestVisible="False"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"
                   Visibility="Visible"
                   FontSize="13"/>
                </Grid>

                <Button Grid.Column="1"
            Content="{DynamicResource joinByCode}"
            Style="{DynamicResource BaseGameButton}"
            Width="150"
            Height="36"
            Margin="10,0,0,0"
            Click="OnJoinByCodeClick" Cursor="Hand"/>
            </Grid>

        </Grid>
    </Grid>
</Page>
