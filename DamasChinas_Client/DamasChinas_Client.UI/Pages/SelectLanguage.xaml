<Page x:Class="DamasChinas_Client.UI.Pages.SelectLanguage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{DynamicResource SurfaceBrush}"
      d:DesignHeight="720" d:DesignWidth="1280">

    <Grid>
        <!-- ===== Fondo con oscurecimiento ===== -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Backgrounds/board-background.png"
                        Stretch="UniformToFill"
                        AlignmentX="Center"
                        AlignmentY="Center"/>
        </Grid.Background>
        <Rectangle Fill="#66000000"/>

        <!-- ===== ESTRUCTURA PRINCIPAL ===== -->
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Barra superior -->
                <RowDefinition Height="*"/>
                <!-- Contenido -->
            </Grid.RowDefinitions>

            <!-- ===== BARRA SUPERIOR ===== -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Botón Back -->
                <Button Width="60" Height="60"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        ToolTip="{DynamicResource back}"
                        Cursor="Hand"
                        Click="OnBackClick">
                    <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/backIcon.png"
                           Width="40" Height="40"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>

                <!-- Título -->
                <TextBlock Grid.Column="1"
                           Text="{DynamicResource configuration}"
                           FontFamily="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Fonts/#Oups"
                           Foreground="White"
                           FontSize="42"
                           VerticalAlignment="Center"
                           Margin="15,0,0,0"/>
            </Grid>

            <!-- ===== CONTENIDO PRINCIPAL ===== -->
            <Border Grid.Row="1"
                    Background="#80222222"
                    BorderBrush="#444"
                    BorderThickness="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="800" Height="400"
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <!-- Columna de íconos -->
                        <ColumnDefinition Width="*"/>
                        <!-- Panel de contenido -->
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- ===== ÍCONO LATERAL (solo idioma) ===== -->
                    <StackPanel Grid.RowSpan="2"
                                Orientation="Vertical"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0">
                        <Image Source="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Icons/languageIcon.png"
                               Width="40" Height="40"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               Margin="0,20,0,0"/>
                    </StackPanel>

                    <!-- ===== TÍTULO DE SECCIÓN ===== -->
                    <Border Grid.Column="1" Grid.Row="0"
                            Background="#353535"
                            BorderBrush="#555"
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="{DynamicResource language}"
                                   FontWeight="Bold"
                                   FontSize="20"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Margin="15,6,0,6"/>
                    </Border>

                    <!-- ===== CONTENIDO DEL PANEL ===== -->
                    <StackPanel Grid.Column="1" Grid.Row="1"
                                Margin="25,25,0,0"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left">

                        <!-- Instrucción -->
                        <TextBlock Text="{DynamicResource instructionLanguage}"
                                   FontSize="18"
                                   Foreground="White"
                                   Margin="0,0,0,20"/>

                        <!-- ComboBox de idiomas -->
                        <ComboBox x:Name="LanguageComboBox"
                                  Width="300"
                                  Height="40"
                                  FontSize="16"
                                  HorizontalContentAlignment="Center"
                                  Margin="0,0,0,30"
                                  >
                            <ComboBoxItem Content="English" Tag="en-US"/>
                            <ComboBoxItem Content="Español" Tag="es-MX"/>
                        </ComboBox>

                        <!-- Botón Confirmar -->
                        <Button Style="{DynamicResource BaseGameButton}"
                                Content="{DynamicResource applyLanguage}"
                                Width="160" Height="44"
                                Click="OnApplyClick"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>



