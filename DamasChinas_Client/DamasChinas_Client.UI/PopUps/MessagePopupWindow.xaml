<Window x:Class="DamasChinas_Client.UI.PopUps.MessagePopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#66000000"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Width="420" Height="240"
        Loaded="Window_Loaded">

    <Grid>
        <!-- Tarjeta central -->
        <Border x:Name="CardBorder"
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="20"
                Padding="25"
                Width="360"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{StaticResource DefaultShadow}">

            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <!-- Icono (texto tipo ✓, !, x) -->
                <Border x:Name="IconCircle"
                        Width="70" Height="70"
                        CornerRadius="35"
                        Background="Green"
                        HorizontalAlignment="Center"
                        Margin="0 0 0 10">
                    <TextBlock x:Name="IconGlyph"
                               Text="✓"
                               FontSize="40"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Título -->
                <TextBlock x:Name="TitleText"
                           Text="Message"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"
                           TextAlignment="Center"
                           Margin="0 5 0 5"/>

                <!-- Mensaje -->
                <TextBlock x:Name="MessageText"
                           Text=""
                           FontSize="15"
                           Foreground="White"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="5 0 5 15"/>

                <!-- Botón OK -->
                <Button x:Name="OkButton"
                        Content="OK"
                        Width="120"
                        Height="36"
                        HorizontalAlignment="Center"
                        Style="{StaticResource PopupPrimaryButton}"
                        Click="OnOkClick"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

