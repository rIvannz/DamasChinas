<!-- Styles/Theme.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===== Paleta base ===== -->
    <Color x:Key="Surface-900">#0D1117</Color>
    <Color x:Key="Surface-800">#161B22</Color>
    <Color x:Key="Wood-Base">#6B4423</Color>
    <Color x:Key="Wood-Edge">#4E2F16</Color>

    <!-- ===== Canicas ===== -->
    <Color x:Key="Marble-Red">#E63946</Color>
    <Color x:Key="Marble-Blue">#2D9CDB</Color>
    <Color x:Key="Marble-Green">#27AE60</Color>
    <Color x:Key="Marble-Yellow">#F2C94C</Color>
    <Color x:Key="Marble-Purple">#9B59B6</Color>
    <Color x:Key="Marble-Cyan">#17A2B8</Color>

    <!-- ===== Texto ===== -->
    <Color x:Key="Text-Primary">#F5F7FA</Color>
    <Color x:Key="Text-Secondary">#C7D0D9</Color>
    <Color x:Key="Text-Inverse">#0B0E11</Color>

    <!-- ===== Brushes ===== -->
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface-900}"/>
    <SolidColorBrush x:Key="SurfaceAltBrush" Color="{StaticResource Surface-800}"/>
    <SolidColorBrush x:Key="BoardWoodBrush" Color="{StaticResource Wood-Base}"/>
    <SolidColorBrush x:Key="BoardEdgeBrush" Color="{StaticResource Wood-Edge}"/>
    <SolidColorBrush x:Key="MarbleRedBrush" Color="{StaticResource Marble-Red}"/>
    <SolidColorBrush x:Key="MarbleBlueBrush" Color="{StaticResource Marble-Blue}"/>
    <SolidColorBrush x:Key="MarbleGreenBrush" Color="{StaticResource Marble-Green}"/>
    <SolidColorBrush x:Key="MarbleYellowBrush" Color="{StaticResource Marble-Yellow}"/>
    <SolidColorBrush x:Key="MarblePurpleBrush" Color="{StaticResource Marble-Purple}"/>
    <SolidColorBrush x:Key="MarbleCyanBrush" Color="{StaticResource Marble-Cyan}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource Text-Primary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource Text-Secondary}"/>
    <SolidColorBrush x:Key="TextInverseBrush" Color="{StaticResource Text-Inverse}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Marble-Yellow}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Marble-Red}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource Marble-Blue}"/>

    <SolidColorBrush x:Key="AccentColor" Color="{Binding Color, Source={StaticResource AccentBrush}}"/>


    <!-- ===== Estilo general para TextBox ===== -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="bd"
                            CornerRadius="10"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ScrollViewer x:Name="PART_ContentHost" Margin="4,2,4,2"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter TargetName="bd" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===== Estilo general para PasswordBox ===== -->
    <Style TargetType="PasswordBox">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Border x:Name="bd"
                            CornerRadius="10"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ScrollViewer x:Name="PART_ContentHost" Margin="4,2,4,2"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter TargetName="bd" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

   
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Buttons.xaml"/>
    </ResourceDictionary.MergedDictionaries>

</ResourceDictionary>
