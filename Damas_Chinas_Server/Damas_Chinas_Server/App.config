<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<section name="entityFramework"
     type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089"
     requirePermission="false" />
	</configSections>

	<appSettings>
		<add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
	</appSettings>

	<system.web>
		<compilation debug="true" />
	</system.web>

	<!-- ==========================
		 CONFIGURACIÓN WCF
	========================== -->
	<system.serviceModel>
		<services>
   <service behaviorConfiguration="LoginServiceBehavior" name="Damas_Chinas_Server.LoginService">
    <endpoint address="" binding="basicHttpBinding" contract="Damas_Chinas_Server.IILoginService" />
    <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
    <host>
     <baseAddresses>
      <add baseAddress="http://localhost:8733/LoginService/" />
     </baseAddresses>
    </host>
   </service>
   <service behaviorConfiguration="SingInServiceBehavior" name="Damas_Chinas_Server.SingInService">
    <endpoint address="" binding="basicHttpBinding" contract="Damas_Chinas_Server.ISingInService" />
    <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
    <host>
     <baseAddresses>
      <add baseAddress="http://localhost:8734/SingInService/" />
     </baseAddresses>
    </host>
   </service>
   <service behaviorConfiguration="AccountManagerBehavior" name="Damas_Chinas_Server.AccountManager">
    <endpoint address="" binding="basicHttpBinding" contract="Damas_Chinas_Server.IAccountManager" />
    <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
    <host>
     <baseAddresses>
      <add baseAddress="http://localhost:8739/AccountManager/" />
     </baseAddresses>
    </host>
   </service>
   <service behaviorConfiguration="ChatServiceBehavior" name="Damas_Chinas_Server.ChatService">
    <endpoint address="" binding="netTcpBinding" contract="Damas_Chinas_Server.IChatService" />
    <endpoint address="mex" binding="mexTcpBinding" contract="IMetadataExchange" />
    <host>
     <baseAddresses>
      <add baseAddress="net.tcp://localhost:8750/ChatService/" />
     </baseAddresses>
    </host>
   </service>
   <service behaviorConfiguration="LobbyServiceBehavior" name="Damas_Chinas_Server.Services.LobbyService">
    <endpoint address="" binding="netTcpBinding" contract="Damas_Chinas_Server.Interfaces.ILobbyService" />
    <endpoint address="mex" binding="mexTcpBinding" contract="IMetadataExchange" />
    <host>
     <baseAddresses>
      <add baseAddress="net.tcp://localhost:8757/LobbyService/" />
     </baseAddresses>
    </host>
   </service>
   <service behaviorConfiguration="FriendServiceBehavior" name="Damas_Chinas_Server.FriendService">
    <endpoint address="" binding="basicHttpBinding" contract="Damas_Chinas_Server.IFriendService" />
    <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
    <host>
     <baseAddresses>
      <add baseAddress="http://localhost:8740/FriendService/" />
     </baseAddresses>
    </host>
   </service>
  </services>

		<!-- ==========================
			 CONFIGURACIÓN DE BEHAVIORS
		========================== -->
		<behaviors>
			<serviceBehaviors>

				<behavior name="LoginServiceBehavior">
					<serviceMetadata httpGetEnabled="true" />
					<serviceDebug includeExceptionDetailInFaults="false" />
				</behavior>

				<behavior name="SingInServiceBehavior">
					<serviceMetadata httpGetEnabled="true" />
					<serviceDebug includeExceptionDetailInFaults="false" />
				</behavior>

				<behavior name="AccountManagerBehavior">
					<serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
					<serviceDebug includeExceptionDetailInFaults="false" />
				</behavior>

				<behavior name="ChatServiceBehavior">
					<serviceMetadata />
					<serviceDebug includeExceptionDetailInFaults="true" />
				</behavior>

				<behavior name="LobbyServiceBehavior">
					<serviceMetadata />
					<serviceDebug includeExceptionDetailInFaults="true" />
				</behavior>

				<behavior name="FriendServiceBehavior">
					<serviceMetadata httpGetEnabled="true" />
					<serviceDebug includeExceptionDetailInFaults="true" />
				</behavior>

			</serviceBehaviors>
		</behaviors>

	</system.serviceModel>

	<!-- ==========================
		 ENTITY FRAMEWORK
	========================== -->
	<entityFramework>
		<providers>
			<provider invariantName="System.Data.SqlClient"
       type="System.Data.Entity.SqlServer.SqlProviderServices, EntityFramework.SqlServer" />
		</providers>
	</entityFramework>

	<connectionStrings configSource="connectionStrings.config" />
</configuration>
