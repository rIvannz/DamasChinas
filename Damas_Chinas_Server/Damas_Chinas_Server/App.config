<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
	</configSections>

	<appSettings>
		<add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
	</appSettings>

	<system.web>
		<compilation debug="true" />
	</system.web>

	<!-- ConfiguraciÃ³n WCF -->
	<system.serviceModel>
		<services>
			<!-- LOGIN SERVICE -->
			<service behaviorConfiguration="LoginServiceBehavior" name="Damas_Chinas_Server.LoginService">
				<endpoint address="" binding="basicHttpBinding" contract="Damas_Chinas_Server.IILoginService" />
				<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8733/LoginService/" />
					</baseAddresses>
				</host>
			</service>

			<!-- SIGN IN SERVICE -->
			<service behaviorConfiguration="SingInServiceBehavior" name="Damas_Chinas_Server.SingInService">
				<endpoint address="" binding="basicHttpBinding" contract="Damas_Chinas_Server.ISingInService" />
				<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8734/SingInService/" />
					</baseAddresses>
				</host>
			</service>

			<!-- ACCOUNT MANAGER SERVICE -->
			<service behaviorConfiguration="AccountManagerBehavior" name="Damas_Chinas_Server.AccountManager">
				<endpoint address="" binding="basicHttpBinding" contract="Damas_Chinas_Server.IAccountManager" />
				<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8739/AccountManager/" />
					</baseAddresses>
				</host>
			</service>

			<!-- SALUDO SERVICE (NetTcp) -->
			<service behaviorConfiguration="SaludoServiceBehavior" name="Damas_Chinas_Server.MensajeriaService">
				<endpoint address="" binding="netTcpBinding" contract="Damas_Chinas_Server.IMensajeriaService" />
				<endpoint address="mex" binding="mexTcpBinding" contract="IMetadataExchange" />
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:8750/MensajeriaService/" />
					</baseAddresses>
				</host>
			</service>

			<!-- AMISTAD SERVICE (HTTP) -->
			<service behaviorConfiguration="AmistadServiceBehavior" name="Damas_Chinas_Server.AmistadService">
				<endpoint address="" binding="basicHttpBinding" contract="Damas_Chinas_Server.IAmistadService"/>
				<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8740/AmistadService/" />
					</baseAddresses>
				</host>
			</service>

		</services>

		<behaviors>
			<serviceBehaviors>
				<behavior name="LoginServiceBehavior">
					<serviceMetadata httpGetEnabled="true" />
					<serviceDebug includeExceptionDetailInFaults="false" />
				</behavior>

				<behavior name="SingInServiceBehavior">
					<serviceMetadata httpGetEnabled="true" />
					<serviceDebug includeExceptionDetailInFaults="false" />
				</behavior>

				<behavior name="AccountManagerBehavior">
					<serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
					<serviceDebug includeExceptionDetailInFaults="false" />
				</behavior>

				<behavior name="SaludoServiceBehavior">
					<serviceMetadata />
					<serviceDebug includeExceptionDetailInFaults="true" />
				</behavior>

				<behavior name="AmistadServiceBehavior">
					<serviceMetadata httpGetEnabled="true" />
					<serviceDebug includeExceptionDetailInFaults="true" />
				</behavior>
			</serviceBehaviors>
		</behaviors>

	</system.serviceModel>

	<entityFramework>
		<providers>
			<provider invariantName="System.Data.SqlClient" type="System.Data.Entity.SqlServer.SqlProviderServices, EntityFramework.SqlServer" />
		</providers>
	</entityFramework>

	<connectionStrings>
