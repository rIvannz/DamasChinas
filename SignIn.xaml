<Page x:Class="DamasChinas_Client.SignIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{DynamicResource SurfaceBrush}">

    <Grid>
        <!-- ===== Fondo del tablero ===== -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/Backgrounds/board-background.png"
                        Stretch="UniformToFill"
                        AlignmentX="Center"
                        AlignmentY="Center"/>
        </Grid.Background>

        <!-- Capa de oscurecimiento -->
        <Rectangle Fill="#66000000"/>

        <!-- ===== Botón Back con ícono transparente ===== -->
        <Button Width="60" Height="60"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20"
                Background="Transparent"
                BorderBrush="Transparent"
                BorderThickness="0"
                ToolTip="{DynamicResource back}"
                Cursor="Hand"
                Click="OnBackClick">
            <Image Source="pack://application:,,,/Assets/Icons/backIcon.png"
                   Width="32" Height="32"
                   Stretch="Uniform"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
        </Button>

        <!-- ===== Contenido principal ===== -->
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="40"
                    Width="520">

            <!-- ===== Título ===== -->
            <Grid HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="{DynamicResource signin}"
                           FontFamily="/Assets/Fonts/#Oups"
                           FontSize="60"
                           FontWeight="Bold"
                           Foreground="Black"
                           Margin="2,2,0,0"
                           Opacity="0.7"
                           TextAlignment="Center">
                    <TextBlock.Effect>
                        <BlurEffect Radius="1.5"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="{DynamicResource signin}"
                           FontFamily="/Assets/Fonts/#Oups"
                           FontSize="60"
                           FontWeight="Bold"
                           Foreground="White"
                           TextAlignment="Center"/>
            </Grid>

            <!-- ===== Subtítulo ===== -->
            <TextBlock Text="{DynamicResource fillFields}"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,25"/>

            <!-- ===== Fila 1: First Name + Last Name ===== -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="{DynamicResource firstName}" Foreground="White" FontSize="16" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtFirstName" Width="200" Height="36"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="{DynamicResource lastName}" Foreground="White" FontSize="16" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtLastName" Width="200" Height="36"/>
                </StackPanel>
            </StackPanel>

            <!-- ===== Fila 2: Email + Username ===== -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="{DynamicResource email}" Foreground="White" FontSize="16" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtEmail" Width="200" Height="36"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="{DynamicResource username}" Foreground="White" FontSize="16" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtUsername" Width="200" Height="36"/>
                </StackPanel>
            </StackPanel>

            <!-- ===== Fila 3: Password + Confirm Password ===== -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="{DynamicResource password}" Foreground="White" FontSize="16" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtPassword" Width="200" Height="36"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="{DynamicResource confirmPassword}" Foreground="White" FontSize="16" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtConfirmPassword" Width="200" Height="36"/>
                </StackPanel>
            </StackPanel>

            <!-- ===== Botón Crear cuenta ===== -->
            <Button Style="{DynamicResource BaseGameButton}"
                    Content="{DynamicResource createAccount}"
                    Width="220" Height="54"
                    HorizontalAlignment="Center"
                    Click="OnCreateAccountClick"/>
        </StackPanel>

        <!-- ===== Iconos inferiores derechos ===== -->
        <Grid VerticalAlignment="Bottom"
              HorizontalAlignment="Right"
              Margin="20"
              Panel.ZIndex="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Icono de sonido -->
            <Button Grid.Column="0"
                    Width="60" Height="60"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    ToolTip="{DynamicResource sound}"
                    Cursor="Hand"
                    Click="OnSoundClick">
                <Image Source="pack://application:,,,/Assets/Icons/soundIcon.png"
                       Width="47" Height="45"
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </Button>

            <!-- Espaciador -->
            <Grid Grid.Column="1"/>

            <!-- Icono de idioma -->
            <Button Grid.Column="2"
                    Width="60" Height="60"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    ToolTip="{DynamicResource language}"
                    Cursor="Hand"
                    Click="OnLanguageClick">
                <Image Source="pack://application:,,,/Assets/Icons/languageIcon.png"
                       Width="32" Height="32"
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </Button>
        </Grid>
    </Grid>
</Page>


