<Page x:Class="DamasChinas_Client.ChangeData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{DynamicResource SurfaceBrush}"
      d:DesignHeight="720" d:DesignWidth="1280">

    <Grid>
        <!-- ===== FONDO ===== -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/Backgrounds/board-background.png"
                        Stretch="UniformToFill"
                        AlignmentX="Center"
                        AlignmentY="Center"/>
        </Grid.Background>

        <!-- Capa de oscurecimiento -->
        <Rectangle Fill="#66000000"/>

        <!-- ===== BOTÓN BACK ===== -->
        <Button Width="60" Height="60"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20"
                Background="Transparent"
                BorderBrush="Transparent"
                BorderThickness="0"
                ToolTip="{DynamicResource back}"
                Cursor="Hand"
                Click="OnBackClick">
            <Image Source="pack://application:,,,/Assets/Icons/backIcon.png"
                   Width="32" Height="32"
                   Stretch="Uniform"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
        </Button>

        <!-- ===== CONTENIDO PRINCIPAL ===== -->
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="40"
                    Width="460">

            <!-- ===== TÍTULO ===== -->
            <Grid HorizontalAlignment="Center" Margin="0,0,0,40">
                <TextBlock Text="CHANGE DATA"
                           FontFamily="/Assets/Fonts/#Oups"
                           FontSize="58"
                           FontWeight="Bold"
                           Foreground="Black"
                           Margin="2,2,0,0"
                           Opacity="0.7"
                           TextAlignment="Center">
                    <TextBlock.Effect>
                        <BlurEffect Radius="1.5"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="CHANGE DATA"
                           FontFamily="/Assets/Fonts/#Oups"
                           FontSize="58"
                           FontWeight="Bold"
                           Foreground="White"
                           TextAlignment="Center"/>
            </Grid>

            <!-- ===== INSTRUCCIÓN ===== -->
            <TextBlock Text="Enter the new data in the corresponding fields / Ingresa los nuevos datos en los campos correspondientes"
                       FontSize="16"
                       Foreground="White"
                       TextAlignment="Center"
                       Margin="0,0,0,30"/>

            <!-- ===== CAMPOS ===== -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- NAME -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,15">
                    <TextBlock Text="{DynamicResource firstName}" Foreground="White" FontSize="16" Margin="0,0,0,5"/>
                    <TextBox Text="Iván"
                             IsReadOnly="True"
                             Width="200" Height="38"
                             Background="#444"
                             Foreground="#AAAAAA"
                             BorderBrush="#777"
                             BorderThickness="1"
                             Opacity="0.7"
                             Effect="{DynamicResource DisabledShadow}"/>
                </StackPanel>

                <!-- LAST NAME -->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,15">
                    <TextBlock Text="{DynamicResource lastName}" Foreground="White" FontSize="16" Margin="0,0,0,5"/>
                    <TextBox Text="Rodríguez"
                             IsReadOnly="True"
                             Width="200" Height="38"
                             Background="#444"
                             Foreground="#AAAAAA"
                             BorderBrush="#777"
                             BorderThickness="1"
                             Opacity="0.7"
                             Effect="{DynamicResource DisabledShadow}"/>
                </StackPanel>

                <!-- EMAIL -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,15">
                    <TextBlock Text="{DynamicResource email}" Foreground="White" FontSize="16" Margin="0,0,0,5"/>
                    <TextBox Text="PixelYT12@gmail.com"
                             IsReadOnly="True"
                             Width="200" Height="38"
                             Background="#444"
                             Foreground="#AAAAAA"
                             BorderBrush="#777"
                             BorderThickness="1"
                             Opacity="0.7"
                             Effect="{DynamicResource DisabledShadow}"/>
                </StackPanel>

                <!-- USERNAME (editable) -->
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,15">
                    <TextBlock Text="{DynamicResource username}" Foreground="White" FontSize="16" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtUsername"
                             Width="200" Height="38"
                             Background="White"
                             Foreground="Black"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"/>
                </StackPanel>

                <!-- PASSWORD (editable) -->
                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,15">
                    <TextBlock Text="{DynamicResource password}" Foreground="White" FontSize="16" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtPassword"
                                 Width="200" Height="38"
                                 Background="White"
                                 Foreground="Black"
                                 BorderBrush="#CCCCCC"
                                 BorderThickness="1"/>
                </StackPanel>

                <!-- CONFIRM PASSWORD -->
                <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,0,0,15">
                    <TextBlock Text="{DynamicResource confirmPassword}" Foreground="White" FontSize="16" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtConfirmPassword"
                                 Width="200" Height="38"
                                 Background="White"
                                 Foreground="Black"
                                 BorderBrush="#CCCCCC"
                                 BorderThickness="1"/>
                </StackPanel>
            </Grid>

            <!-- ===== BOTÓN GUARDAR ===== -->
            <Button Style="{StaticResource BaseGameButton}"
                    Content="Save Changes"
                    Width="220" Height="50"
                    Margin="0,35,0,0"
                    Click="OnSaveChangesClick"/>

        </StackPanel>

        <!-- ===== ICONOS INFERIORES ===== -->
        <Grid VerticalAlignment="Bottom"
              HorizontalAlignment="Right"
              Margin="20,0,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- SONIDO -->
            <Button Grid.Column="0"
                    Width="60" Height="60"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    ToolTip="{DynamicResource sound}"
                    Cursor="Hand"
                    Click="OnSoundClick">
                <Image Source="pack://application:,,,/Assets/Icons/soundIcon.png"
                       Width="45" Height="50"
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </Button>

            <!-- IDIOMA -->
            <Button Grid.Column="2"
                    Width="60" Height="60"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    ToolTip="{DynamicResource language}"
                    Cursor="Hand"
                    Click="OnLanguageClick">
                <Image Source="pack://application:,,,/Assets/Icons/languageIcon.png"
                       Width="32" Height="32"
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </Button>
        </Grid>
    </Grid>
</Page>
